---
import data from "../../config/phone_messages.json";

const phone = data.phone_number;
const online_stores = encodeURIComponent(data.online_stores);
---

<!-- CTA Section -->
<section id="contact" class="py-20">
    <div class="container mx-auto px-6">
        <div class="glass-card p-10 md:p-16 rounded-3xl text-center animate-on-scroll">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">¿Listo para <span class="gradient-text">lanzar tu tienda</span> online?</h2>
            <p class="text-lg text-accent mb-8 max-w-2xl mx-auto">Agenda una consulta gratuita y recibe tu cotización personalizada en 24 horas</p>
            <a href={`https://wa.me/${phone}?text=${online_stores}`} target="_blank" class="btn btn-lg btn-primary">Agendar consulta gratuita de 15 min</a>
        </div>
    </div>
</section>