---
import data from "../../config/phone_messages.json";

const phone = data.phone_number;
const web_page = encodeURIComponent(data.web_page);
const bulk_messages = encodeURIComponent(data.bulk_messages);
---

<!-- Services Section -->
<section id="services" class="py-20">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold animate-on-scroll">
        Nuestros <span class="gradient-text">Servicios</span>
      </h2>
      <p class="text-lg text-accent mt-2 animate-on-scroll delay-100">
        Soluciones a la medida de tu crecimiento.
      </p>
    </div>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 gap-x-10 py-8"
    >
      <!-- Service Card 1: Páginas Web Informativas -->
      <div class="glass-card card animate-on-scroll delay-100">
        <div class="bg-secondary p-4 rounded-full mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-primary"
            ><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line
              x1="3"
              y1="9"
              x2="21"
              y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg
          >
        </div>
        <h3 class="text-xl font-semibold mb-2 text-white">
          Páginas Web Informativas
        </h3>
        <p class="text-sm">
          Diseñamos sitios web modernos y atractivos para presentar tu negocio
          al mundo.
        </p>

        <a href={`https://wa.me/${phone}?text=${web_page}`}
        target="_blank" class="btn btn-sm btn-primary w-full mt-6">
          Cotizar ahora
        </a>
      </div>

      <!-- Service Card 2: Asistentes WhatsApp (DESTACADO) -->
      <div
        class="glass-card card animate-on-scroll delay-200"
        style="transform: scale(1.10); border: 1px solid #b5eae4;"
      >
        <div class="popular-badge">⭐ MÁS POPULAR</div>
        <div class="bg-secondary p-4 rounded-full mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="36"
            height="36"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-primary"
            ><path
              d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
            ></path></svg
          >
        </div>
        <h3 class="text-xl font-semibold mb-2 text-white">
          Asistentes WhatsApp
        </h3>
        <p class="text-sm">
          Automatizamos conversaciones y soporte al cliente con chatbots
          inteligentes.
        </p>
        <a
          href="/whatsapp-assistant"
          class="btn btn-sm btn-primary w-full mt-6"
        >
          Ver más
        </a>
      </div>

      <!-- Service Card 3: Tiendas Online / Ecommerce -->
      <div
        class="glass-card card animate-on-scroll delay-300"
        style="transform: scale(1.10); border: 1px solid #b5eae4;"
      >
        <div class="popular-badge">⭐ MÁS POPULAR</div>
        <div class="bg-secondary p-4 rounded-full mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="36"
            height="36"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-primary"
          >
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path
              d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"
            ></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2 text-white">
          Tiendas Online / Ecommerce
        </h3>
        <p class="text-sm">
          Creamos plataformas de venta online seguras, intuitivas y listas para
          vender.
        </p>
        <a href="/ecommerce" class="btn btn-sm btn-primary w-full mt-6">
          Ver más
        </a>
      </div>

      <!-- Service Card 4: Mensajes Masivos por WhatsApp -->
      <div class="glass-card card animate-on-scroll delay-400 p-8">
        <div class="bg-secondary p-4 rounded-full mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-primary"
            ><path
              d="M2.9 20.3a2.4 2.4 0 0 1-2.2-3.6l4.4-7.3a2.4 2.4 0 0 1 4.4 0l4.4 7.3a2.4 2.4 0 0 1-2.2 3.6Z"
            ></path><path
              d="M13 18.5a2.4 2.4 0 0 1-2.2-3.6l4.4-7.3a2.4 2.4 0 0 1 4.4 0l4.4 7.3a2.4 2.4 0 0 1-2.2 3.6Z"
            ></path></svg
          >
        </div>
        <h3 class="text-xl font-semibold mb-2 text-white">
          Mensajes Masivos por WhatsApp
        </h3>
        <p class="text-sm">
          Llegamos a tus clientes de forma directa y efectiva con campañas
          personalizadas.
        </p>
        <a href={`https://wa.me/${phone}?text=${bulk_messages}`}
        target="_blank" class="btn btn-sm btn-primary w-full mt-6">
          Cotizar ahora
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .card {
    text-align: center;
    padding: 2rem;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .popular-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(90deg, #54c5c5, #b5eae4);
    color: #000;
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    font-weight: 600;
    font-size: 0.9rem;
    width: max-content;
  }

  /* Efecto de borde brillante para la tarjeta destacada */
  .featured-service {
    border: 2px solid transparent;
    background:
      linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)) padding-box,
      linear-gradient(135deg, #54c5c5, #b5eae4, #1c5d5f, #54c5c5) border-box;
    animation: rotate-border 4s linear infinite;
    box-shadow: 0 8px 32px rgba(84, 197, 197, 0.2);
    margin-top: -2rem; /* Make it taller by starting higher */
    margin-bottom: -2rem; /* Make it taller at the bottom too */
    padding-top: 4rem !important; /* Add extra padding at top for badge */
    padding-bottom: 3rem !important; /* Add extra padding at bottom */
  }

  @keyframes rotate-border {
    0% {
      background:
        linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)) padding-box,
        linear-gradient(135deg, #54c5c5, #b5eae4, #1c5d5f, #54c5c5) border-box;
    }
    50% {
      background:
        linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)) padding-box,
        linear-gradient(135deg, #b5eae4, #1c5d5f, #54c5c5, #b5eae4) border-box;
    }
    100% {
      background:
        linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)) padding-box,
        linear-gradient(135deg, #54c5c5, #b5eae4, #1c5d5f, #54c5c5) border-box;
    }
  }

  /* Efecto shimmer (brillo animado) */
  .shimmer {
    animation: shimmer 3s infinite;
    pointer-events: none;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  /* Hover effect adicional para la tarjeta destacada */
  .featured-service:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 40px rgba(84, 197, 197, 0.4);
  }
</style>
