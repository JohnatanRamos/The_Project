<!-- Footer -->
<footer class="bg-base border-t border-secondary/50">
    <div class="container mx-auto px-6 pt-16 pb-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
            <!-- Column 1: Brand -->
            <div class="sm:col-span-2 lg:col-span-1">
                <a href="#" class="text-3xl font-bold gradient-text">NOVALUX</a>
                <p class="mt-4 text-sm text-accent/70">Transformando ideas en realidades digitales exitosas.</p>
            </div>
            
            <!-- Column 2: Quick Links -->
            <div>
                <h4 class="font-semibold text-lg text-accent tracking-wider">Enlaces</h4>
                <ul class="mt-4 space-y-3">
                    <li><a href="ecommerce" class="text-sm text-accent/80 hover:text-primary transition-colors">Tiendas Online</a></li>
                    <li><a href="whatsapp-assistant" class="text-sm text-accent/80 hover:text-primary transition-colors">Asistentes WhatsApp</a></li>
                </ul>
            </div>

            <!-- Column 3: Legal -->
            <div>
                <h4 class="font-semibold text-lg text-accent tracking-wider">Legal</h4>
                <ul class="mt-4 space-y-3">
                    <li><a href="privacy-policies" class="text-sm text-accent/80 hover:text-primary transition-colors">Política de Privacidad</a></li>
                    <li><a href="services-terms" class="text-sm text-accent/80 hover:text-primary transition-colors">Términos de Servicio</a></li>
                </ul>
            </div>

            <!-- Column 4: Social -->
            <div>
                <h4 class="font-semibold text-lg text-accent tracking-wider">Síguenos</h4>
                <div class="flex space-x-4 mt-4">
                    <a href="https://www.facebook.com/profile.php?id=61550927721681" target="_blank" class="text-accent hover:text-primary transition-transform duration-300 hover:scale-110" aria-label="Facebook">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                    </a>
                    <a href="https://www.instagram.com/novalux.tech/" target="_blank" class="text-accent hover:text-primary transition-transform duration-300 hover:scale-110" aria-label="Instagram">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                    </a>
                    <a href="https://www.linkedin.com/company/109237137/" target="_blank" class="text-accent hover:text-primary transition-transform duration-300 hover:scale-110" aria-label="LinkedIn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
